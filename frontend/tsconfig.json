{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
    "paths": {
      "*": ["types/*"],
      "app/*": ["./app/*"],
      "assets/*": ["./assets/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["dist", "build", "node_modules"]
}
